<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

    <ImageView
            android:id="@+id/imgFugitivo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher" />

    <TextView
            android:id="@+id/textNombreUpgrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:text="TextView"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/imgFugitivo"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Nombre Fugitivo"/>

    <TextView
            android:id="@+id/textFechaUpgrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:textStyle="italic"
            android:textSize="15sp"
            android:text="TextView"
            app:layout_constraintStart_toEndOf="@+id/imgFugitivo"
            app:layout_constraintTop_toBottomOf="@+id/textNombreUpgrade"
            tools:text="Fecha Captura"/>
</android.support.constraint.ConstraintLayout>